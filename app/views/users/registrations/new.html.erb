<h2><%= t('.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <%= f.fields_for :organizations do |organization_fields| %>
    <%= organization_fields.label :組織名 %><br />
    <%= organization_fields.text_field :name, required: true %><br />
    <%# フォームでのバリデーションと初期値設定入力がない状態だとエラー %>
    <%#= organization_fields.text_field :name, required: true, value: params[:user][:organizations][:name] %><br />

    <%= organization_fields.label :組織のEメール %><br />
    <%= organization_fields.text_field :email, required: true, pattern: "[a-zA-Z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" %><br />
    <%# フォームでのバリデーションと初期値設定入力がない状態だとエラー %>
    <%#= organization_fields.text_field :email, required: true, value: params[:user][:organizations][:email], pattern: "[a-zA-Z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" %><br />

    <%# end %>
  <% end %>

  <div class="actions">
    <%= f.submit t('.sign_up') %>
  </div>
<% end %>

<%= render "/shared/links" %>
