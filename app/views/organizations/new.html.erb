<% provide(:title, "組織登録") %>
<% provide(:btn_text, "登録") %>

<div class="card">
  <div class="card-body">
    <%= form_with model: @organization, url: organizations_path, method: :post, local: true do |f| %>
      <%= render '/shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
      <br>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
      <br>
      <%= f.fields_for :users do |user_fields| %>
      <%= user_fields.label :投稿者の名前 %>
      <%= user_fields.text_field :name, value:@user.name %>
      <br>
      <%= user_fields.label :投稿者のEメール %>
      <%= user_fields.text_field :email, value:@user.email %>
      <br>
      <%= user_fields.label :投稿者のパスワード %>
      <%= user_fields.password_field :password, value:@user.password %>
      <br>
      <%= user_fields.label :投稿者のパスワード（確認用） %>
      <%= user_fields.password_field :password_confirmation %>
      <br>
      <% end %>
    <%= f.submit yield(:btn_text), class: "btn btn-md btn-block btn-primary" %>
    <% end %>
  </div>
</div>
